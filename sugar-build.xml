<project name="Sugar" default="sugar">
	<import file="build.xml"/>
	
	<target name="package-kit" depends="world">
		<property name="product" value="quigley-zabbixj-${version}.${build.revision}"/>
		<property name="dist" value="build/dist/"/>
		<property name="distProduct" value="${dist}/${product}"/>
		
		<copy todir="${distProduct}/src/">
			<fileset dir="src/">
				<exclude name="**/Version.java.template"/>
				<exclude name="doc"/>
				<exclude name="doc/*"/>
			</fileset>
		</copy>
		<copy todir="${distProduct}/lib/">
			<fileset dir="lib/"/>
		</copy>
		<copy todir="${distProduct}/bin/">
			<fileset dir="bin/"/>
		</copy>
		<copy todir="${distProduct}">
			<fileset dir="build/dist/">
				<include name="*.jar"/>
			</fileset>
			<fileset dir=".">
				<include name="build.xml"/>
				<include name="LICENSE"/>
			</fileset>
		</copy>
	</target>

	<target name="sugar" depends="package-kit">
		<fail unless="build.outputRoot"/>
		<fail unless="build.revision"/>
		
		<zip destfile="${build.outputRoot}/${product}.zip">
			<fileset dir="${dist}">
				<include name="${product}/"/>
			</fileset>
		</zip>
	</target>	
</project>
